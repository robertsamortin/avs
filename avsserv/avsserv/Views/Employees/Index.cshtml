@{
    ViewData["Title"] = "Employee Maintenance - List";
}

@model List<Employees>
<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            

            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    List of Employees

                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6">
                                <a asp-action="Add" asp-controller="Employees" class="btn btn-primary">Add Employee</a>
                        </div>
                        <div class="col-sm-6 col-sm-3 pull-right">

                            <input type="search" class="form-control input-sm" placeholder="Search Here">

                        </div>
                    </div>
                    <br>
                    <div class="table-responsive">
                        @Html.ValidationMessage("Error")



                    </div>
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Employee Number</th>
                                <th>First Name</th>
                                <th>Middle Name</th>
                                <th>Last Name</th>
                                <th>Nick Name</th>
                                <th>Position</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                                {
                            <tr class="odd gradeX">
                                <td>@item.EmpNo</td>
                                <td>@item.FirstName</td>
                                <td>@item.MiddleName</td>
                                <td>@item.LastName</td>
                                <td>@item.NickName</td>
                                <td>@item.Position</td>
                            </tr>
                                }


                        </tbody>
                    </table>
                </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
</div>